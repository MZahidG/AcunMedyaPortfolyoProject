@model List<AcunMedyaPortfolioProject.Models.Tbl_Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Referans ID</th>
                <th>Açıklama 1</th>
                <th>Referans İsim - Soyisim</th>
                <th>Açıklama 2</th>
                <th>Görsel</th>
                <th>Ünvan</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Description1</td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageUrl" style="width:50px" /></td>
                    <td>@item.Title</td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-info">Güncelle</a></td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Testimonial/CreateTestimonial/" class="btn btn-success">Oluştur</a>
</div>

