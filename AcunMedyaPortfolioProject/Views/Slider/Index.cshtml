@model List<AcunMedyaPortfolioProject.Models.Tbl_Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Görüntü Kaydırıcı Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Select ID</th>
                <th>İsim Soyisim</th>
                <th>Ünvan</th>
                <th>Slider Resmi</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SelectID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" style="width:50px" /></td>
                    <td><a href="/Slider/UpdateSlider/@item.SelectID" class="btn btn-info">Güncelle</a></td>
                    <td><a href="/Slider/DeleteSlider/@item.SelectID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Slider/CreateSlider/" class="btn btn-success">Oluştur</a>
</div>