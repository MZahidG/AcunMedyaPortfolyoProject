@model List<AcunMedyaPortfolioProject.Models.Tbl_Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Servisler Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Açıklama 1</th>
                <th>Başlık</th>
                <th>Servis İkonu</th>
                <th>Açıklama 2</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceID</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td>@item.IconUrl</td>
                    <td>@item.Description2</td>
                    <td><a href="/Services/UpdateServices/@item.ServiceID" class="btn btn-info">Güncelle</a></td>
                    <td><a href="/Services/DeleteServices/@item.ServiceID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Services/CreateServices/" class="btn btn-success">Oluştur</a>
</div>